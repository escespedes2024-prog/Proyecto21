<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Título de pantalla -->
    <style name="SignupTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Botón principal -->
    <style name="PrimaryButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/deep_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Texto inferior para redirección -->
    <style name="RedirectText">
        <item name="android:textColor">@color/deep_pink</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Campos de entrada -->
    <style name="InputTextStyle">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Checkbox de términos -->
    <style name="TermsCheckboxStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Botón principal de login -->
    <style name="PrimaryButton2" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/deep_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Texto del título (Welcome Back) -->
    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para los campos de entrada -->
    <style name="TextInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/deep_pink</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

    <!-- Texto pequeño (links, forgot password, etc.) -->
    <style name="SmallLinkText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/deep_pink</item>
    </style>

    <!-- Estilo para el texto "Or" -->
    <style name="DividerText">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Estilo para botones sociales -->
    <style name="SocialButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>
</resources>
